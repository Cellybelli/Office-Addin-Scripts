{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "alwaysStrict": false,
        "noImplicitUseStrict": true,
        "strictNullChecks": false,
        "types": [
            "node",
            "es6-promise"
        ]
        
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
    
}